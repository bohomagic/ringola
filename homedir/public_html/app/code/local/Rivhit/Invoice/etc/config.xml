<?xml version="1.0"?>
<config>
    <modules>
        <Rivhit_Invoice>
            <version>1.0.0.0</version> 
        </Rivhit_Invoice> 
    </modules>
    <global>
        <models>
            <invoice>
                <class>Rivhit_Invoice_Model</class> 
                <resourceModel>invoice_mysql4</resourceModel>
            </invoice> 
            <invoice_mysql4>
                 <class>Rivhit_Invoice_Model_Mysql4</class>
                 <entities>
                    <invoice>
                        <table>invoice</table>
                    </invoice>
                </entities>
            </invoice_mysql4>
        </models>
        <resources>
            <Rivhit_invoice_setup>
                <setup>
                    <module>Rivhit_Invoice</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </Rivhit_invoice_setup>
            <invoice_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </invoice_write>
            <invoice_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </invoice_read>
        </resources> 
         <helpers>
            <rivhit_invoice>
                <class>Rivhit_Invoice_Helper</class>
            </rivhit_invoice>
        </helpers>
        <blocks>
                <rivhit_invoice>
                    <class>Rivhit_Invoice_Block</class>
                </rivhit_invoice>
        </blocks>        
    </global>
   <admin>
        <routers>
            <orderinvoice>
                <use>admin</use>
                <args>
                    <module>Rivhit_Invoice</module>
                    <frontName>orderinvoice</frontName>
                </args>
            </orderinvoice>
        </routers>
    </admin>
    <adminhtml>
         <events>
            <adminhtml_widget_container_html_before>
               <observers>
                    <invoice>
                       <class>invoice/observer</class>
                       <method>customerInvoiceButton</method>
                    </invoice>
               </observers>
           </adminhtml_widget_container_html_before>
        </events>
        <layout>
            <updates>
                <rivhit_invoice>
                    <file>rivhitinvoice.xml</file>
                </rivhit_invoice>
            </updates>
        </layout>
     </adminhtml>
     <default>
        <rivhit_invoice>
            <general>
                <doctype>2</doctype>
                <defaultcustomerid>0</defaultcustomerid>
                <createcustomer>1</createcustomer>
                <findbyemail>1</findbyemail>
                <createitem>1</createitem>
                <sortcode>100</sortcode>
                <examptsortcode>150</examptsortcode>
                <sendemail>1</sendemail>
                <digitallysign>1</digitallysign>
                <paypalpaymentcode>10</paypalpaymentcode>
                <creditcardpaymentcode>6</creditcardpaymentcode>
                <cashpaymentcode>2</cashpaymentcode>
            </general>
        </rivhit_invoice>
    </default>
</config>

